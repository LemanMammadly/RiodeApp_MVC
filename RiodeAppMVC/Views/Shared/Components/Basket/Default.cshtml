@model List<BasketItemProductVM>

        @foreach (var item in Model)
            {
                <div class="product product-cart">
                    <figure class="product-media">
                        <a asp-controller="Shop" asp-action="Detail" asp-route-id="@item.Product.Id">
                            <img src="~/@item.Product.MainImage" alt="product" width="80"
                                 height="88" />
                        </a>
                        <button class="btn btn-link btn-close">
                            <i class="fas fa-times"></i><span class="sr-only">Close</span>
                        </button>
                    </figure>
                    <div class="product-detail">
                        <a href="demo7-product.html" class="product-name">@item.Product.Name</a>
                        <div class="price-box">
                            <span class="product-quantity">1</span>
                            <div class="product-price">
                                @if (item.Product.Discount != 0)
                                {
                                    <ins class="new-price">$@String.Format("{0:0.00}", @item.Product.Price - (item.Product.Price * @item.Product.Discount / 100)) </ins><del class="old-price">$@item.Product.Price</del>
                                }
                                else
                                {
                                    <ins class="new-price">$@item.Product.Price</ins>
                                }
                            </div>
                        </div>
                    </div>

                </div>
            }
