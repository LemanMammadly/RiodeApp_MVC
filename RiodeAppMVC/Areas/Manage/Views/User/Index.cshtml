@model List<UserAndRoleVM>

@{
    int order = 0;
}

<table class="table table-dark mt-2">
    <thead>
        <tr>
            <th>#</th>
            <th>Fullname</th>
            <th>Username</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@(++order)</td>
                <td>@user.Fullname</td>
                <td>@user.Name</td>
                <td>
                    <select class="select-role" asp-for="@user.Role" user-name="@user.Name" asp-items="@ViewBag.Roles">
                    </select>
                </td>

                <td><a asp-area="Manage" asp-controller="Slider" asp-action="Delete" asp-route-id="@user.Name" class="btn btn-danger delete-btn">Sil</a></td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>$(".select-role").each(function () {
            if ($(this).val() == "Admin")
                $(this).prop("disabled","true")
        })
        $(".select-role").change(function(){
            $.post('https://localhost:7093/Manage/User/ChangeRole', {
                username: $(this).attr("user-name"),
                role:$(this).val()
            })
        })</script>
}